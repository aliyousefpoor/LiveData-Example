<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/edittxt"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:background="#DAD7D7"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#DAD7D7"
        android:gravity="center"
        android:textColor="#E91E63"
        app:layout_constraintEnd_toEndOf="@id/edittxt"
        app:layout_constraintStart_toStartOf="@id/edittxt"
        app:layout_constraintTop_toBottomOf="@id/edittxt" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#DAD7D7"
        android:gravity="center"
        android:textColor="#E91E63"
        app:layout_constraintEnd_toEndOf="@id/edittxt"
        app:layout_constraintStart_toStartOf="@id/edittxt"
        app:layout_constraintTop_toBottomOf="@id/txt" />
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        app:layout_constraintStart_toEndOf="@id/edittxt"
        app:layout_constraintTop_toTopOf="@id/edittxt"
        app:layout_constraintBottom_toBottomOf="@id/txt2"
        android:layout_marginStart="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>